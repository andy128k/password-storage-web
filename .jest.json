{
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": ["node_modules/"],

    "moduleNameMapper": {
        "\\.css$": "identity-obj-proxy"
    },

    "collectCoverage": true,
    "collectCoverageFrom" : [
        "src/**/*.js",
        "!src/tests/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": ["text-summary", "html"]
}
